<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:fontFamily">@font/default_font</item>-->
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:fontFamily">@font/default_font</item>-->
    </style>

    <style name="TextAppearance.MyCustomDay" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:textColor">@drawable/tv_calendar_text_color</item>
    </style>

</resources>
